@model ProyectoPrueba.Models.Orders


    <label>@Html.DisplayFor(model => model.Customers.ContactName) - @Html.DisplayFor(model => model.OrderID)</label>



    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>
                        Codigo
                    </th>
                    <th>
                        Descripcion
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        total
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Order_Details)
                {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.Products.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@Math.Round(Convert.ToDouble(item.Products.UnitPrice),2)</td>
                        <td>@Math.Round(Convert.ToDouble(item.Quantity * item.Products.UnitPrice), 2)</td>
                    </tr>
                  
                        }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group" style="width: 250px;">
                 <div class='input-group date' id='datetimepicker1'>  
                    <input class="form-control" type="text" id="dateConfirmation" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                 </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Total:</label>
                <input type="text" name="total" value="@Model.Order_Details.Sum(t => Math.Round(Convert.ToDouble(t.Quantity*t.Products.UnitPrice),2))" disabled />

            </div>
           
        </div>
    </div>

<div class="row">
    <div class="col-sm-12">
        <div class="form-inline">
            <label>Comentario:</label>
            <textarea id="comentario" class="form-control"></textarea>
        </div>
        <div class="form-inline">
            <input type="button" class="btn btn-primary" name="name" value="Guardar" />
        </div>
    </div>
</div>
    <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
    </script>